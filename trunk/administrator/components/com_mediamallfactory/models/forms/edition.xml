<?xml version="1.0" encoding="utf-8"?>

<form>
	<fieldset name="details">
	  <field name="id" readonly="true" class="readonly" />
	  <field name="title" type="text" required="true" />
	  <field name="parent_id" type="MediaMallFactoryCategory" level="1" excludecurrent="true" required="true" default="0" /> 
	  <field name="description" type="textarea" rows="5" />
	  <field name="thumbnail" type="media" directory="kochk/editions" />
	  <field name="published" type="switch" default="1" />
	  <field name="level" type="hidden" default="2" />
	</fieldset>
	<fieldset name="icountryf" label="Include Countries">
	    <field name="icountry" type="MediaMallFactoryCountry" label="Country" default="NUL" />
	    <field name="icountrygroup" type="MediaMallFactoryCountryGroupSelect" default="0" label="Group" />
	</fieldset> 
	<fieldset name="ecountryf" label="Exclude Countries">      
	       <field name="ecountry" type="MediaMallFactoryCountry" label="Country" default="NUL"/>
	       <field name="ecountrygroup" type="MediaMallFactoryCountryGroupSelect" default="0" label="Group" />
	</fieldset>  	
</form>
