<?xml version="1.0" encoding="utf-8"?>

<form>
  <fieldset name="details">
    <field name="id" type="text" readonly="true" class="readonly" />
    <field name="type" type="MediaMallFactoryNotificationType" required="true" default="" onchange="Joomla.submitbutton('notification.refresh');" />
    <field name="lang_code" type="language" required="true">
      <option value="*">JALL</option>
    </field>
    <field name="subject" type="text" required="true" />
    <field name="body" type="MediaMallFactoryNotificationEditor" nolabel="false" required="true" buttons="article,pagebreak,readmore" filter="raw" />
    <field name="published" type="switch" default="1" />
  </fieldset>
</form>
