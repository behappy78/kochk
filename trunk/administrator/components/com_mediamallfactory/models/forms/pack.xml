<?xml version="1.0" encoding="utf-8"?>

<form>
  <fieldset name="details">
    <field name="id" type="text" readonly="true" class="readonly" />
    <field name="title" type="text" required="true" />
    <field name="country" type="MediaMallFactoryCountry" required="true" />
    <field name="country_group" type="MediaMallFactoryCountryGroupSelect" required="true" />
    <field name="currency" type="MediaMallFactoryCurrency" required="true" />
    <field name="type" type="list" default="0">
      <option value="0">Green</option>
      <option value="1">Silver</option>
      <option value="2">Gold</option>
    </field>
    <field name="cost" type="text" required="true" />
    <field name="credits" type="text"  required="true" />
    <field name="validity" type="text" default="0" required="true" />
    <field name="published" type="switch" default="1" />    
  </fieldset>
</form>
