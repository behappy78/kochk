<?xml version="1.0" encoding="utf-8"?>

<form>
  <field name="filename_media" type="hidden" />
  <field name="filename_archive" type="hidden" />

  <fieldset name="details">
    <field name="id" readonly="true" class="readonly" />
    <field name="title" type="text" required="true" />

    <field name="published" type="list" adminonly="true" required="true">
      <option value="-1">COM_MEDIAMALLFACTORY_FORM_MEDIA_PUBLISHED_PENDING_OPTION</option>
      <option value="0">COM_MEDIAMALLFACTORY_FORM_MEDIA_PUBLISHED_UNPUBLISHED_OPTION</option>
      <option value="1">COM_MEDIAMALLFACTORY_FORM_MEDIA_PUBLISHED_PUBLISHED_OPTION</option>
    </field>

    <field name="type_id" type="mediamallfactorytype" required="true" class="mediamallfactory-type" update="media" />
    <field name="category_id" type="MediaMallFactoryCategory" level="2" required="true" />
    <field name="user_id" type="user" required="true" adminonly="true" />
    <field name="description" type="textarea" rows="5" />
    <field name="thumbnail" type="MediaMallFactoryThumbnail" extensions="png, jpg, jpeg, gif" class="validate-extension"
           validate="MediaMallFactoryFile" filter="FactoryFormFilters::file" />
  </fieldset>

  <fieldset name="file">
    <field name="media" type="MediaMallFactoryFile" class="validate-extension"
           validate="MediaMallFactoryFile" filter="FactoryFormFilters::file" />
    <field name="cost_media" type="text" size="5" class="validate-numeric" />
    <field name="details_media" type="textarea" rows="5" />
  </fieldset>

  <fieldset name="archive">
    <field name="archive" type="MediaMallFactoryFile" filetype="archive" extensions="zip, rar, gz, bz2, arj, arc, 7z" class="validate-extension"
           validate="MediaMallFactoryFile" filter="FactoryFormFilters::file" />
    <field name="cost_archive" type="text" size="5" class="validate-numeric" />
    <field name="details_archive" type="textarea" rows="5"  />
  </fieldset>
</form>
