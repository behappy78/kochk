<?xml version="1.0" encoding="utf-8"?>

<extension type="module" version="2.5" client="site" method="upgrade">
	<name>mod_mediamallfactory</name>
	<version>3.3.5</version>

  <creationDate>August 2008</creationDate>
  <author>The Factory</author>
  <copyright>SKEPSIS Consult SRL</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <authorEmail>contact@thefactory.ro</authorEmail>
  <authorUrl>www.thefactory.ro</authorUrl>
  <description>Media Mall Factory Module</description>

  <languages>
		<language tag="en-GB">en-GB.mod_mediamallfactory.ini</language>
		<language tag="en-GB">en-GB.mod_mediamallfactory.sys.ini</language>
	</languages>

  <files>
		<filename module="mod_mediamallfactory">mod_mediamallfactory.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_mediamallfactory.xml</filename>
	</files>

  <config>
		<fields name="params">
			<fieldset name="basic">
				<field name="mode" type="list" default="1"
          label="MOD_MEDIAMALLFACTORY_FORM_FIELD_SHOW_LABEL" description="MOD_MEDIAMALLFACTORY_FORM_FIELD_SHOW_DESC">
          <option value="latest">MOD_MEDIAMALLFACTORY_FORM_FIELD_SHOW_OPTION_LATEST</option>
          <option value="rated">MOD_MEDIAMALLFACTORY_FORM_FIELD_SHOW_OPTION_RATED</option>
          <option value="downloaded">MOD_MEDIAMALLFACTORY_FORM_FIELD_SHOW_OPTION_DOWNLOADED</option>
        </field>
        <field name="cost" type="list" default=""
          label="MOD_MEDIAMALLFACTORY_FORM_FIELD_COST_LABEL" description="MOD_MEDIAMALLFACTORY_FORM_FIELD_COST_DESC">
          <option value="">MOD_MEDIAMALLFACTORY_FORM_FIELD_COST_OPTION_ALL</option>
          <option value="0">MOD_MEDIAMALLFACTORY_FORM_FIELD_COST_OPTION_FREE</option>
          <option value="1">MOD_MEDIAMALLFACTORY_FORM_FIELD_COST_OPTION_PAID</option>
        </field>
        <field name="limit" type="text" default="5" size="5"
          label="MOD_MEDIAMALLFACTORY_FORM_FIELD_LIMIT_LABEL" description="MOD_MEDIAMALLFACTORY_FORM_FIELD_LIMIT_DESC" />
			</fieldset>

			<fieldset name="advanced">
				<field name="layout" type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field name="moduleclass_sfx" type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field name="cache" type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field name="cache_time" type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
