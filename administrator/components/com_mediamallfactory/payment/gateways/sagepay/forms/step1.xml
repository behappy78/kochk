<?xml version="1.0" encoding="utf-8"?>

<form>
  <fieldset name="details">
    <field name="firstname" type="text" required="true" />
    <field name="surname" type="text" required="true" />
    <field name="address1" type="text" required="true" />
    <field name="address2" type="text" />
    <field name="city" type="text" required="true" />
    <field name="postcode" type="text" required="true" />
    <field name="country" type="SagePayCountry" required="true" />
    <field name="state" type="text" validate="SagePayState" />
    <field name="phone" type="text" />
  </fieldset>
</form>
