<?xml version="1.0" encoding="utf-8"?>

<form>
  <fieldset name="params">
    <fields name="params">
  		<!-- Email -->
  	  <field name="email" type="text"
  			label="FACTORY_PAYMENT_SAGEPAY_EMAIL_LABEL" description="FACTORY_PAYMENT_SAGEPAY_EMAIL_DESC"
  			size="60" default="" required="true" />

  		<!-- Vendor name -->
  	  <field name="vendor_name" type="text"
			  label="FACTORY_PAYMENT_SAGEPAY_VENDOR_LOGIN_LABEL" description="FACTORY_PAYMENT_SAGEPAY_VENDOR_LOGIN_DESC"
			  size="60" default="" required="true" />

		  <!-- Encryption password -->
	    <field name="encryption_password" type="text"
  			label="FACTORY_PAYMENT_SAGEPAY_ENCRYPTION_PASSWORD_LABEL" description="FACTORY_PAYMENT_SAGEPAY_ENCRYPTION_PASSWORD_DESC"
  			size="60" default="" required="true" />

  	  <!-- Sage Pay Referrer ID -->
  	  <field name="referrer_id" type="text"
  			label="FACTORY_PAYMENT_SAGEPAY_REFERER_LABEL" description="FACTORY_PAYMENT_SAGEPAY_REFERER_DESC"
  			size="60" default="" />

	    <!-- Confirmation email address -->
	    <field name="confirmation_email" type="text"
  			label="FACTORY_PAYMENT_SAGEPAY_CONFIRMATION_EMAIL_ADDRESS_LABEL" description="FACTORY_PAYMENT_SAGEPAY_CONFIRMATION_EMAIL_ADDRESS_DESC"
  			size="60" default="" />

	    <!-- Send confirmation email -->
	    <field name="send_email" type="list" class="auto"
			  label="FACTORY_PAYMENT_SAGEPAY_SEND_CONFIRMATION_EMAIL_LABEL" description="FACTORY_PAYMENT_SAGEPAY_SEND_CONFIRMATION_EMAIL_DESC"
			  default="0">
			  <option value="0">FACTORY_PAYMENT_SAGEPAY_SEND_CONFIRMATION_EMAIL_NO_EMAILS</option>
			  <option value="1">FACTORY_PAYMENT_SAGEPAY_SEND_CONFIRMATION_EMAIL_BOTH</option>
			  <option value="2">FACTORY_PAYMENT_SAGEPAY_SEND_CONFIRMATION_EMAIL_VENDOR</option>
	    </field>

	    <!-- Email message -->
	    <field name="email_message" type="textarea"
			  label="FACTORY_PAYMENT_SAGEPAY_EMAIL_MESSAGE_LABEL" description="FACTORY_PAYMENT_SAGEPAY_EMAIL_MESSAGE_DESC"
			  rows="10" cols="40" default="" />

		  <!-- Enable Gift Aid -->
	    <field name="allow_gift_aid" type="switch"
  			label="FACTORY_PAYMENT_SAGEPAY_ENABLE_GIFT_AID_LABEL" description="FACTORY_PAYMENT_SAGEPAY_ENABLE_GIFT_AID_DESC"
  			default="0" />

  	  <!-- AVS/CV2 checks -->
  	  <field name="apply_avscv2" type="list" class="auto"
  			label="FACTORY_PAYMENT_SAGEPAY_APPLY_AVSCV_LABEL" description="FACTORY_PAYMENT_SAGEPAY_APPLY_AVSCV_DESC"
  			default="0">
  			<option value="0">FACTORY_PAYMENT_SAGEPAY_APPLY_AVSCV_CHECK</option>
  			<option value="1">FACTORY_PAYMENT_SAGEPAY_APPLY_AVSCV_FORCE_CHECK</option>
  			<option value="2">FACTORY_PAYMENT_SAGEPAY_APPLY_AVSCV_NO_CHECK</option>
  			<option value="3">FACTORY_PAYMENT_SAGEPAY_APPLY_AVSCV_FORCE_DONT_APPLY</option>
  	  </field>

  	  <!-- 3D-Secure checks -->
  	  <field name="apply_3dsecure" type="list" class="auto"
  			label="FACTORY_PAYMENT_SAGEPAY_SECURE_CHECKS_LABEL" description="FACTORY_PAYMENT_SAGEPAY_SECURE_CHECKS_DESC"
  			default="0">
	  		<option value="0">FACTORY_PAYMENT_SAGEPAY_SECURE_CHECKS_PERFORM</option>
  			<option value="1">FACTORY_PAYMENT_SAGEPAY_SECURE_CHECKS_FORCE</option>
  			<option value="2">FACTORY_PAYMENT_SAGEPAY_SECURE_CHECKS_NO_PERFORM</option>
  			<option value="3">FACTORY_PAYMENT_SAGEPAY_SECURE_CHECKS_FORCE_AUTH_CODE</option>
  	  </field>

  	  <!-- Mode -->
	    <field name="mode" type="list"
  			label="FACTORY_PAYMENT_SAGEPAY_MODE_LABEL" description="FACTORY_PAYMENT_SAGEPAY_MODE_DESC"
  			default="0">
  			<option value="0">FACTORY_PAYMENT_SAGEPAY_MODE_LIVE</option>
	  		<option value="1">FACTORY_PAYMENT_SAGEPAY_MODE_TEST</option>
  			<option value="2">FACTORY_PAYMENT_SAGEPAY_MODE_SIMULATOR</option>
	    </field>

  	  <!-- Action live -->
  	  <field name="action_live" type="text"
  			label="FACTORY_PAYMENT_SAGEPAY_ACTION_LIVE_LABEL" description="FACTORY_PAYMENT_SAGEPAY_ACTION_LIVE_DESC"
	  		size="80" default="https://live.sagepay.com/gateway/service/vspform-register.vsp" required="true" />

  		<!-- Action test -->
  	  <field name="action_test" type="text"
	  		label="FACTORY_PAYMENT_SAGEPAY_ACTION_TEST_LABEL" description="FACTORY_PAYMENT_SAGEPAY_ACTION_TEST_DESC"
  			size="80" default="https://test.sagepay.com/gateway/service/vspform-register.vsp" />

  		<!-- Action simulator-->
  	  <field name="action_simulator" type="text"
	  		label="FACTORY_PAYMENT_SAGEPAY_SIMULATOR_LABEL" description="FACTORY_PAYMENT_SAGEPAY_SIMULATOR_DESC"
		  	size="80" default="https://test.sagepay.com/Simulator/VSPFormGateway.asp" />

	  </fields>
  </fieldset>
</form>
