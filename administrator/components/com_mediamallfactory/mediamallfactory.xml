  <description>Media Mall Factory</description>

  <languages folder="languages/frontend">
		<language tag="en-GB">en-GB.com_mediamallfactory.ini</language>
		<language tag="en-GB">en-GB.com_mediamallfactory.authorizenet.ini</language>
		<language tag="en-GB">en-GB.com_mediamallfactory.paypal.ini</language>
