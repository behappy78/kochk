<?xml version="1.0" encoding="utf-8"?>

<form>
  <fieldset name="details">
    <field name="id" type="text" readonly="true" class="readonly" />
    <field name="title" type="text" required="true"/>
    <field name="category_id" type="category" required="true" extension="com_mediamallfactory" />
    <field name="amount" type="text" required="true" />
    <field name="validity" type="text" required="true" />
    <field name="validity_unit" type="list" default="0" >
      <option value="Jours">JOURS</option>
      <option value="Numeros">NUMEROS</option>
    </field>    
    <field name="country_id" type="MediaMallFactoryCountry" required="true" />
    <field name="group_id" type="MediaMallFactoryCountryGroupSelect" required="true" />
    <field name="published" type="switch" default="1" />
  </fieldset>
</form>
